[Unit]
Description= jenkins JNLP agent service
After=network.target

[Service]
Type=simple
Restart=always
RestartSec=5
User=<%=node['jenkins-jnlp']['agent_owner']%>
WorkingDirectory=<%=node['jenkins-jnlp']['agent_home']%>
ExecStart=java -jar <%=node['jenkins-jnlp']['agent_home']%>/agent.jar -jnlpUrl http://<%=node['jenkins-jnlp']['agent_master']%>/computer/agent/jenkins-agent.jnlp -secret <%=node['jenkins-jnlp']['agent_key']%> -workDir "<%=node['jenkins-jnlp']['var_path']%>"

[Install]
WantedBy=multi-user.target
